{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "esnext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        // "noUnusedLocals": true, 원래 설정
        // "noUnusedParameters": true, 원래 설정
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,

        /* Resolve */
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
            // "@page/*": ["src/page/*"]
        }
    },
    "include": ["src", "electron", "tests", "vite.config.ts", "src/stores/.ts"],
    "exclude": ["node_modules", "dist"]
}
